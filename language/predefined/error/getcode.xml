<refentry xml:id="error.getcode" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>Error::getCode</refname>
  <refpurpose>Gibt den Fehlercode zurück</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>final</modifier> <modifier>public</modifier> <type>mixed</type><methodname>Error::getCode</methodname>
   <void />
  </methodsynopsis>
  <para>
    Gibt den Fehlercode zurück
  </para>
 </refsect1>
 
 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>
 
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Gibt den Fehlercode als <type>Integer</type> zurück
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>Error::getCode</function>-Beispiel</title>
    <programlisting role="php">
<![CDATA[
<?php
try {
    throw new Error("Eine Fehlermeldung", 30);
} catch(Error $e) {
    echo "Der Fehlercode ist: " . $e->getCode();
}
?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
Der Fehlercode ist: 30
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>Throwable::getCode</methodname></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>
 
