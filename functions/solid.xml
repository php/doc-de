<?xml version="1.0" encoding="iso-8859-1"?>
 <reference id="ref.solid">
  <title>Solid functions</title>
  <titleabbrev>Solid</titleabbrev>
  <partintro>
   <para>
    Anstelle der Solid Funktionen sollten lieber die 
    <link linkend="ref.odbc">Unified ODBC Funktionen</link> verwendet werden.</para>
  </partintro>

  <refentry id="function.solid-close">
   <refnamediv>
    <refname>solid_close</refname>
    <refpurpose>Solid Verbindung beenden</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_close</function>.</para>
   </refsect1>
  </refentry>


  <refentry id="function.solid-connect">
   <refnamediv>
    <refname>solid_connect</refname>
    <refpurpose>Verbindung zu einer Solid Datenquelle aufbauen</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_connect</function>.</para>
   </refsect1>
  </refentry>


  <refentry id="function.solid-exec">
   <refnamediv>
    <refname>solid_exec</refname>
    <refpurpose>Solid Abfrage ausführen</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_exec</function>.</para>
   </refsect1>
  </refentry>


  <refentry id="function.solid-fetchrow">
   <refnamediv>
    <refname>solid_fetchrow</refname>
    <refpurpose>Ergebniszeile eines Solid Abfrageresultats in ein Array stellen</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_fetch_row</function></para>
   </refsect1>
  </refentry>


  <refentry id="function.solid-fieldname">
   <refnamediv>
    <refname>solid_fieldname</refname>
    <refpurpose>Liefert die Spaltenbezeichnung aus einem Solid Abfrageresultat</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_field_name</function>.</para>
   </refsect1>
  </refentry>


  <refentry id="function.solid-fieldnum">
   <refnamediv>
    <refname>solid_fieldnum</refname>
    <refpurpose>Liefert Index einer Spalte  aus einem Solid Abfrageresultat</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_field_num</function>.</para>
   </refsect1>
  </refentry>


  <refentry id="function.solid-freeresult">
   <refnamediv>
    <refname>solid_freeresult</refname>
    <refpurpose>Gibt den durch ein Solid Abfrageresultat belegten Speicher frei</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_free_result</function>.</para>
   </refsect1>
  </refentry>


  <refentry id="function.solid-numfields">
   <refnamediv>
    <refname>solid_numfields</refname>
    <refpurpose>Liefert Anzahl der Felder aus einem Solid Abfrageresultat</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_num_fields</function>.</para>
   </refsect1>
  </refentry>


  <refentry id="function.solid-numrows">
   <refnamediv>
    <refname>solid_numrows</refname>
    <refpurpose>Anzahl der Ergebniszeilen in einem Solid Abfrageresultat</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_num_rows</function>.</para>
   </refsect1>
  </refentry>


  <refentry id="function.solid-result">
   <refnamediv>
    <refname>solid_result</refname>
    <refpurpose>liest Daten aus einem Solid Abfrageresultat</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
    <para>Siehe <function>odbc_result</function>.</para>
   </refsect1>
  </refentry>


 </reference>

