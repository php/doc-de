 <refentry id="function.pdf-setfont">
  <refnamediv>
   <refname>PDF_setfont</refname>
   <refpurpose>Setzt aktuelle Schrift</refpurpose>
  </refnamediv>
  <refsect1 role="description">
    &reftitle.description;
    <methodsynopsis>
     <type>bool</type><methodname>PDF_setfont</methodname>
     <methodparam><type>resource</type><parameter>pdfdoc</parameter></methodparam>
     <methodparam><type>int</type><parameter>font</parameter></methodparam>
     <methodparam><type>float</type><parameter>fontsize</parameter></methodparam>
    </methodsynopsis>
   <para>
    Setzt die aktuelle Schrift in der angegebenen Größe. &return.success;
   </para>
  </refsect1>
 </refentry>

