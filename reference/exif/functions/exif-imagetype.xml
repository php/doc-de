  <refsect1 role="examples">
   &reftitle.examples;
   <para>
    <example>
     <title><function>exif_imagetype</function>-Beispiel</title>
     <programlisting role="php">
<![CDATA[
<?php
if (exif_imagetype('image.gif') != IMAGETYPE_GIF) {
    echo 'Das Bild ist kein gif';
}
?>
]]>  
     </programlisting>
    </example>
   </para>
