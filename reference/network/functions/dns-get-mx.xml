  <refentry id="function.dns-get-mx">
   <refnamediv>
    <refname>dns_get_mx</refname>
    <refpurpose>Synonym für <function>getmxrr</function></refpurpose>
   </refnamediv>
   <refsect1 role="description">
    &reftitle.description;
     <methodsynopsis>
      <type>bool</type><methodname>dns_get_mx</methodname>
      <methodparam><type>string</type><parameter>hostname</parameter></methodparam>
      <methodparam><type>array</type><parameter role="reference">mxhosts</parameter></methodparam>
      <methodparam choice="opt"><type>array</type><parameter role="reference">weight</parameter></methodparam>
     </methodsynopsis>
    <para>
      Ermittelt die zum übergebenen Hostnamen passenden MX-Records.
    </para>
   </refsect1>
  </refentry>

