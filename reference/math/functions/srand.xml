 <refsect1 role="description">
  &reftitle.description;
   <methodsynopsis>
    <type>void</type><methodname>srand</methodname>
    <methodparam choice="opt"><type>int</type><parameter>seed</parameter></methodparam>
   </methodsynopsis>
