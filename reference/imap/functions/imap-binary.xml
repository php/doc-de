<refentry xml:id="function.imap-binary" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>imap_binary</refname>
  <refpurpose>Konvertiert einen 8bit-String in einen Base64-kodierten String</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type class="union"><type>string</type><type>false</type></type><methodname>imap_binary</methodname>
   <methodparam><type>string</type><parameter>string</parameter></methodparam>
  </methodsynopsis>
  <para>
   Konvertiert einen 8bit-String gemäß
   <link xlink:href="&url.rfc;2045">RFC2045</link>, Abschnitt 6.8 in einen
   Base64-kodierten String.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>string</parameter></term>
     <listitem>
      <para>
       Der zu konvertierende 8bit-String
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Gibt einen Base64-kodierten String zurück. &return.falseforfailure;
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>imap_base64</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
