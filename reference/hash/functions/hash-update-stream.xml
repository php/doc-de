 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>hash_update_stream</function>-Beispiel</title>
    <programlisting role="php">
<![CDATA[
<?php
$fp = tmpfile();
fwrite($fp, 'Franz jagt im komplett verwahrlosten Taxi quer durch Bayern.');
rewind($fp);

$ctx = hash_init('md5');
hash_update_stream($ctx, $fp);
echo hash_final($ctx);
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
ba4b9da310763a91f8edc7c185a1e4bf
]]>
    </screen>
   </example>
  </para>
 </refsect1>

