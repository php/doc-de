 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>linkinfo</function>-Beispiel</title>
    <programlisting role="php">
<![CDATA[
<?php

echo linkinfo('/vmlinuz'); // 835

?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

