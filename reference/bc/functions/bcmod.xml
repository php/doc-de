 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>bcmod</function>-Beispiel</title>
   <programlisting role="php">
<![CDATA[
<?php
bcscale(0);
echo bcmod( '5',  '3'); //  2
echo bcmod( '5', '-3'); //  2
echo bcmod('-5',  '3'); // -2
echo bcmod('-5', '-3'); // -2
?>
]]>
   </programlisting>
  </example>
  <example>
   <title><function>bcmod</function> mit Dezimalzahlen</title>
   <programlisting role="php">
<![CDATA[
<?php
bcscale(1);
echo bcmod('5.7', '1.3'); // 0.5 von PHP 7.2.0 an; 0 zuvor
?>
]]>
   </programlisting>
  </example>
 </refsect1>

