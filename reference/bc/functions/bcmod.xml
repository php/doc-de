  <refentry id="function.bcmod">
   <refnamediv>
    <refname>bcmod</refname>
    <refpurpose>
     Modulo zweier Zahlen mit beliebiger Genauigkeit
    </refpurpose>
   </refnamediv>
   <refsect1 role="description">
    &reftitle.description;
     <methodsynopsis>
      <type>string</type><methodname>bcmod</methodname>
      <methodparam><type>string</type><parameter>left_operand</parameter></methodparam>
      <methodparam><type>string</type><parameter>modulus</parameter></methodparam>
     </methodsynopsis>
    <para>
     Liefert den Modulo des <parameter>left_operand</parameter> unter Verwendung
     von <parameter>modulus</parameter>.
    </para>
   </refsect1>
   <refsect1>
    &reftitle.examples;
    <example>
     <title><function>bcmod</function>-Beispiel</title>
     <programlisting role="php">
<![CDATA[
<?php
echo bcmod('4', '2'); // 0
echo bcmod('2', '4'); // 2
?>
]]>
     </programlisting>
    </example>
   </refsect1>
   <refsect1>
    &reftitle.seealso;
    <para>
     <function>bcdiv</function>.
    </para>
   </refsect1>
  </refentry>

