     </listitem>
    </varlistentry>

    <varlistentry xml:id="datetimeinterface.constants.w3c">
     <term><constant>DateTimeInterface::W3C</constant></term>
     <term><constant>DATE_W3C</constant></term>
     <listitem>
      <simpara>
       World Wide Web Consortium (Beispiel: 2005-08-15T15:52:01+00:00)
      </simpara>
     </listitem>
    </varlistentry>

   </variablelist>
