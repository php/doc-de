  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>data</parameter></term>
     <listitem>
      <para>
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>crypted</parameter></term>
     <listitem>
      <para>
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>key</parameter></term>
     <listitem>
      <para>
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>padding</parameter></term>
     <listitem>
      <para>
       <parameter>padding</parameter> ist per Standard
       <constant>OPENSSL_PKCS1_PADDING</constant>, kann aber auch 
       <constant>OPENSSL_NO_PADDING</constant> sein.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

