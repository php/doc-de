 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Prüfe PNG-Unterstützung</title>
    <programlisting role="php">
<![CDATA[
<?php
if (imagetypes() & IMG_PNG) {
    echo "PNG wird unterstützt";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

