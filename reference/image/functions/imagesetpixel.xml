<refentry xml:id="function.imagesetpixel" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>imagesetpixel</refname>
  <refpurpose>Setze ein einzelnes Pixel</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>imagesetpixel</methodname>
   <methodparam><type>resource</type><parameter>image</parameter></methodparam>
   <methodparam><type>int</type><parameter>x</parameter></methodparam>
   <methodparam><type>int</type><parameter>y</parameter></methodparam>
   <methodparam><type>int</type><parameter>color</parameter></methodparam>
  </methodsynopsis>
  <para> 
   <function>imagesetpixel</function> zeichnet ein Pixel an der angegebenen
   Koordinate.
  </para> 
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &gd.image.description;
    <varlistentry>
     <term><parameter>x</parameter></term>
     <listitem>
      <para>
       x-Koordinate.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>y</parameter></term>
     <listitem>
      <para>
       y-Koordinate.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>color</parameter></term>
     <listitem>
      <para>
       &gd.identifier.color;
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>imagesetpixel</function> Beispiel</title>
    <para>
     Eine zuf√§llige Zeichnung, die mit einem normalen Bild endet.
    </para>
    <programlisting role="php">
<![CDATA[
<?php

$x = 200;
$y = 200;

$gd = imagecreatetruecolor($x, $y);
 
$corners[0] = array('x' => 100, 'y' =>  10);
$corners[1] = array('x' =>   0, 'y' => 190);
$corners[2] = array('x' => 200, 'y' => 190);

$red = imagecolorallocate($gd, 255, 0, 0); 

for ($i = 0; $i < 100000; $i++) {
  imagesetpixel($gd, round($x),round($y), $red);
  $a = rand(0, 2);
  $x = ($x + $corners[$a]['x']) / 2;
  $y = ($y + $corners[$a]['y']) / 2;
}
 
header('Content-Type: image/png');
imagepng($gd);

?>
]]>
    </programlisting>
    &example.outputs.similar;
    <mediaobject>
     <alt>Ausgabe des Beispiels : imagesetpixel()</alt>
     <imageobject>
      <imagedata fileref="en/reference/image/figures/imagesetpixel.png"/>
     </imageobject>
    </mediaobject>
   </example>
  </para>
 </refsect1>

