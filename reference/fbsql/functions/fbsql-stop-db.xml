  <refentry xml:id="function.fbsql-stop-db" xmlns="http://docbook.org/ns/docbook">
   <refnamediv>
    <refname>fbsql_stop_db</refname>
    <refpurpose>Stoppt eine Datenbank auf einem lokalen oder entferneten Server</refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
     <methodsynopsis>
      <type>bool</type><methodname>fbsql_stop_db</methodname>
      <methodparam><type>string</type><parameter>Datenbankname</parameter></methodparam>
      <methodparam choice="opt"><type>resource</type><parameter>
        Verbindungskennung
       </parameter></methodparam>
     </methodsynopsis>
    <para> 
     &return.success;
    </para>
    <para> 
     <function>fbsql_stop_db</function>
    </para>
    <para> 
     Siehe auch: <function>fbsql_db_status</function> und
     <function>fbsql_start_db</function>.
    </para>
   </refsect1>
  </refentry>

