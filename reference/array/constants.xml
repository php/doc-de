<section id="array.constants">
 &reftitle.constants;
 &extension.constants.core;
 <variablelist>
  <varlistentry>
   <term>
    <constant>CASE_LOWER</constant>
    (<link linkend="language.types.integer">integer</link>)
   </term>
   <listitem>
    <simpara>
     <constant>CASE_LOWER</constant> wird benützt mit
     <function>array_change_key_case</function> um die Schlüssel von Arrays
     in Kleinbuchstaben umzuwandeln. Das ist auch der Standard für
     <function>array_change_key_case</function>.
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>CASE_UPPER</constant>
    (<link linkend="language.types.integer">integer</link>)
   </term>
   <listitem>
    <simpara>
     <constant>CASE_UPPER</constant> wird benützt mit
     <function>array_change_key_case</function> um die Schlüssel von Arrays
     in Großbuchstaben umzuwandeln.
    </simpara>
   </listitem>
  </varlistentry>
 </variablelist>
</section>

