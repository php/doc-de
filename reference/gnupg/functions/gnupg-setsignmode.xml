<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.gnupg-setsignmode">
 <refnamediv>
  <refname>gnupg_setsignmode</refname>
  <refpurpose>Setzt den Signierungs-Modus</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>gnupg_setsignmode</methodname>
   <methodparam><type>resource</type><parameter>identifier</parameter></methodparam>
   <methodparam><type>int</type><parameter>signmode</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   Setzt den Signierungs-Modus.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>identifier</parameter></term>
    <listitem>
     &gnupg.identifier;
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>sigmode</parameter></term>
    <listitem>
     <simpara>
      Der Modus der Signierung.
     </simpara>
     <simpara>
      <parameter>signmode</parameter> übernimmt eine Konstante, die angibt,
      welche Art von Signatur erzeugt werden soll. Die möglichen Werte sind
      <constant>GNUPG_SIG_MODE_NORMAL</constant>,
      <constant>GNUPG_SIG_MODE_DETACH</constant> und
      <constant>GNUPG_SIG_MODE_CLEAR</constant>.
      Standardmäßig wird <constant>GNUPG_SIG_MODE_CLEAR</constant> verwendet.
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <simpara>
   &return.success;
  </simpara>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Prozedurales <function>gnupg_setsignmode</function> Beispiel</title>
    <programlisting role="php">
<![CDATA[
<?php
$res = gnupg_init();
gnupg_setsignmode($res,GNUPG_SIG_MODE_DETACH); // erzeugt eine abgetrennte Signatur
?>
]]>
    </programlisting>
   </example>
   <example>
    <title>OO <function>gnupg_setsignmode</function> Beispiel</title>
    <programlisting role="php">
<![CDATA[
<?php
$gpg = new gnupg();
$gpg->setsignmode(gnupg::SIG_MODE_DETACH); // erzeugt eine abgetrennte Signatur
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
</refentry>
