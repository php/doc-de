<refentry xml:id="function.ziparchive-addemptydir" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>ZipArchive::addEmptyDir</refname>
  <refpurpose>Fügt ein neues Verzeichnis hinzu</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>ZipArchive::addEmptyDir</methodname>
   <methodparam><type>string</type><parameter>dirname</parameter></methodparam>
  </methodsynopsis>
  <para>
   Fügt dem Archiv ein neues Verzeichnis hinzu.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>dirname</parameter></term>
     <listitem>
      <para>
       Das hinzuzufügende Verzeichnis.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title>Erstellt ein neues Verzeichnis im Archiv</title>
   <programlisting role="php">
<![CDATA[
<?php
$zip = new ZipArchive;
if ($zip->open('test.zip') === TRUE) {
    if($zip->addEmptyDir('newDirectory')) {
        echo 'Neues Rootverzeichnis erstellt.';
    } else {
        echo 'Konnte Verzeichnis nicht erstellen.';
    }
    $zip->close();
} else {
    echo 'Fehler';
}
?>
]]>
   </programlisting>
  </example>
 </refsect1>
</refentry>


