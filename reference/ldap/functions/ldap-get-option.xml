 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Pr端fen der Protokollversion</title>
    <programlisting role="php">
<![CDATA[
<?php
// $ds ist eine g端ltige Verbindungskennung f端r einen Verzeichnis-Server

if (ldap_get_option($ds, LDAP_OPT_PROTOCOL_VERSION, $version)) {
    echo "Sie verwenden die Protokollversion $version\n";
} else {
    echo "Protokollversion konnte nicht bestimmt werden\n";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

