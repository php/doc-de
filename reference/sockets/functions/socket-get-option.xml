  <refentry id="function.socket-get-option">
   <refnamediv>
    <refname>socket_get_option</refname>
    <refpurpose>Holt die Socket-Optionen für einen Socket </refpurpose>
   </refnamediv>
   <refsect1>
    <title>Beschreibung</title>
     <methodsynopsis>
      <type>mixed</type><methodname>socket_get_option</methodname>
      <methodparam><type>resource</type><parameter>socket</parameter></methodparam>
      <methodparam><type>int</type><parameter>level</parameter></methodparam>
      <methodparam><type>int</type><parameter>optname</parameter></methodparam>
     </methodsynopsis>
     &warn.experimental.func;
    <para>
     &warn.undocumented.func;
    </para>
    <note>
     <para>
      In PHP Versionen vor 4.3.0 entsprach dies der Funktion
      <literal>socket_getopt()</literal>. 
     </para>
    </note>
   </refsect1>
  </refentry>

