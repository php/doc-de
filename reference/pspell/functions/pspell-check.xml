<refentry xml:id="function.pspell-check" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>pspell_check</refname>
  <refpurpose>Überprüft ein Wort</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>pspell_check</methodname>
   <methodparam><type>PSpell\Dictionary</type><parameter>dictionary</parameter></methodparam>
   <methodparam><type>string</type><parameter>word</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   <function>pspell_check</function> überprüft die Schreibweise eines Wortes.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>dictionary</parameter></term>
     <listitem>
      &pspell.parameter.pspell-dictionary;
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>word</parameter></term>
     <listitem>
      <para>
       Das zu überprüfende Wort.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Gibt &true; zurück, wenn die Schreibweise korrekt ist, oder &false;, wenn
   nicht.
  </para>
 </refsect1>

 <refsect1 role="changelog">
  &reftitle.changelog;
  <informaltable>
   <tgroup cols="2">
    <thead>
     <row>
      <entry>&Version;</entry>
      <entry>&Description;</entry>
     </row>
    </thead>
    <tbody>
     &pspell.changelog.pspell-dictionary;
    </tbody>
   </tgroup>
  </informaltable>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>pspell_check</function>-Beispiel</title>
    <programlisting role="php">
<![CDATA[
<?php
$pspell = pspell_new("de");

if (pspell_check($pspell, "Testt")) {
    echo "Das ist eine gültige Schreibweise";
} else {
    echo "Sorry, falsche Schreibweise";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

</refentry>
