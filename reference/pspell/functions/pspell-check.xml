<refentry xml:id="function.pspell-check" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>pspell_check</refname>
  <refpurpose>Überprüft ein Wort</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>pspell_check</methodname>
   <methodparam><type>int</type><parameter>wörterbuch_link</parameter></methodparam>
   <methodparam><type>string</type><parameter>Wort</parameter></methodparam>
  </methodsynopsis>
  <simpara>
   <function>pspell_check</function> überprüft die Schreibweise eines Wortes.
  </simpara>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>wörterbuch_link</parameter></term>
     <listitem>
      <para>
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>Wort</parameter></term>
     <listitem>
      <para>
       Das überprüfte Wort
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Gibt &true; zurück, wenn die Schreibweise korrekt ist oder &false;, wenn
   nicht.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>pspell_check</function> Beispiel</title>
    <programlisting role="php">
<![CDATA[
<?php
$pspell_link = pspell_new("de");

if (pspell_check($pspell_link, "Testt")) {
    echo "Das ist eine gültige Schreibweise";
} else {
    echo "Sorry, falsche Schreibweise";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

</refentry>

