<refentry xml:id="function.cpdf-rect" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>cpdf_rect</refname>
  <refpurpose>Zeichnet ein Rechteck</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>cpdf_rect</methodname>
   <methodparam><type>int</type><parameter>PDF-Dokument</parameter></methodparam>
   <methodparam><type>float</type><parameter>x_koor</parameter></methodparam>
   <methodparam><type>float</type><parameter>y_koor</parameter></methodparam>
   <methodparam><type>float</type><parameter>Breite</parameter></methodparam>
   <methodparam><type>float</type><parameter>Höhe</parameter></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>Modus</parameter></methodparam>
  </methodsynopsis>
  <para>
   Zeichnet ein Rechteck.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &cpdf.pdf-document.description;
    <varlistentry>
     <term><parameter>x_koor</parameter></term>
     <listitem>
      <para>
       Die x-Koordinate der Ecke unten links
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>y_koor</parameter></term>
     <listitem>
      <para>
       Die y-Koordinate der Ecke unten links
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>Breite</parameter></term>
     <listitem>
      <para>
       Die Breite des Rechtecks
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>Höhe</parameter></term>
     <listitem>
      <para>
       Die Höhe des Rechtecks
      </para>
     </listitem>
    </varlistentry>
    &cpdf.mode.description;
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Zeichnen eines Rechtecks</title>
    <programlisting role="php">
<![CDATA[
<?php

$cpdf = cpdf_open(0);
cpdf_page_init($cpdf, 1, 0, 595, 842, 1.0);

// die Füllfarbe auf Rot setzen
cpdf_setrgbcolor($cpdf, 1, 0, 0);

// ein (180 * 100) Rechteck zeichnen
cpdf_rect($cpdf, 645, 400, 180, 100);

// das Rechteck füllen
cpdf_fill($cpdf);

cpdf_finalize($cpdf);
Header("Content-type: application/pdf");
cpdf_output_buffer($cpdf);
cpdf_close($cpdf);

?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
</refentry>

